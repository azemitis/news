{% extends 'layout.twig' %}

{% block content %}
    <div class="flex pt-20 pb-10 items-center justify-center">
        <div class="bg-white p-8 rounded-lg" style="height: 25vh;">
            <h1 class="text-8xl text-gray-700 font-bold text-center">Better Than TVNET</h1>
        </div>
    </div>

    {# {% include 'SearchMenu.twig' %} #}

    <div class="flex justify-center">
        <div class="grid grid-cols-2 gap-6 bg-gray-800 py-10 px-5">
            {% for article in articles %}
                <div class="max-w-md w-full mx-auto">
                    <div class="bg-gray-700 rounded-tr rounded-br p-4 flex flex-col justify-between leading-normal shadow-lg">
                        <div class="mb-8">
                            <h2 class="text-2xl text-white font-bold text-center pb-5">
                                {{ article.title }} ({{ article.id }})</h2>
                            <div class="image-container">
                                <img src="{{ images[loop.index0] }}" alt="Random Image" class="mx-auto mb-4">
                            </div>
                            <p class="text-l text-gray-200">{{ article.body }}</p>
                        </div>
                        <p class="text-l text-indigo-300 text-right">Written by: {{ article.userId }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="h-16 bg-white"></div>

    <style>
        .image-container {
            position: relative;
        }

        .image-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Adjust the opacity for the desired darkness */
        }

        .image-container img {
            display: block;
            width: 100%;
            height: auto;
        }
    </style>
{% endblock %}
