{% extends 'layout.twig' %}

{% block content %}
    <div class="flex justify-center py-20">
        <div class="max-w-3xl px-6">
            <div class="mb-6">
                <h1 class="text-5xl font-bold pb-5">Author: {{ author.name }}</h1>
                <p class="text-indigo-800">Username: {{ author.username }}</p>
                <p class="text-indigo-800">Email: {{ author.email }}</p>
            </div>
            <div class="mb-6">
                <img src="https://placekitten.com/400/300" alt="Author Image">
            </div>
            <div class="mb-6">
                <h2 class="text-xl font-bold mb-4">Articles by {{ author.name }}</h2>
                <ul>
                    {% for article in articles %}
                        <li class="mb-4">
                            <h3 class="text-2xl font-bold">{{ article.title | capitalize }}</h3>
                            <p class="text-lg">{{ article.body }}</p>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
